<h1>Edit Review</h1>
<h3>Here is where you may edit your previous Review</h3>

<%= link_to "Return to Restaurant List", restaurants_path %><br>
<%= link_to "Return to Review List", reviews_path %><br>


<%= form_for(@review) do |f| %>
    <%= f.label :user %>
    <%= f.collection_select(:user_id, User.all, :id, :name) %><br>

    <%= f.label :restaurant %>
    <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name) %><br>

    <%= f.label :rating %>
    <%= f.number_field :rating %><br>
    <%= f.label :dining_method %>
    <%= f.select :dining_method, ['Dine In', 'Take Out']%><br>
    <%= f.label :comment %>
    <%= f.text_area :comment %><br>
    <%= f.submit %>
  <% end %>
